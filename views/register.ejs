<div class="register">
    <div class="login1">
     <main class="form-signin w-100 m-auto">
         <form method="post">
           <img class="mb-4" src="./public/images/logo2.png" alt="" width="50 height="50">
           <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
       
           <div style="padding-bottom: 10px;" class="form-floating">
             <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
             <label for="floatingInput">Email address</label>
           </div>
           <div class="form-floating">
             <input name="password1" type="password" class="form-control" id="floatingPassword" placeholder="Password">
             <label for="floatingPassword">Password</label>
           </div>

           <div class="form-floating" style="padding-top: 10px;">
            <input name="password2" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          </div>
       
           <div class="form-check text-start my-3">
             <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
             <label class="form-check-label" for="flexCheckDefault">
               Remember me
             </label>
        
           </div>
           <button formaction="/register" class="btn btn-primary w-100 py-2" type="submit">Register</button>
           <p style="padding-top: 10px;"> You have an account with us? <a href="/login">Log In</a></p>
           <div class="col-sm-10">
            <div class="card social-block">
              <div class="card-body">
                <a class="btn btn-block" href="/auth/google/login" role="button">
                  <i class="fab fa-google"></i>
                  Sign Up with Google
                </a>
              </div>
            </div>
          </div>
           <p class="registerPadding" class="mt-5 mb-3 text-body-secondary">© 2017–2023</p>
         </form>  
       </main>
    </div>
    </div>
